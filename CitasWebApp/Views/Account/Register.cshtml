@model CitasWebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2 class="text-center mb-5"><i class="fa fa-hospital text-primary"></i> Sistema de Citas</h2>
<div class="row">
    <div class="col-md-6 col-sm-6 col-12 login-box-info">
        <h4 class="mb-4">Ingresar</h4>
        <p class="mb-4">Estimado usuario, si cuenta con una cuenta en el sitema redirigase al login con el siguiente boton:</p>
        <p class="text-center"><a href="Login" class="btn btn-light">Ingresar Ahora</a></p>
    </div>
    <div class="col-md-6 col-sm-6 col-12 login-box-form p-4">
        <h4 class="mb-2">Registro</h4>
        @Html.ValidationMessage("Error")
        <small class="text-muted bc-description">Crear una nueva cuenta</small>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-envelope"></i></span>
                </div>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control mt-0", placeholder = "Correo" })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
                </div>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control mt-0", placeholder = "Nombres" })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
                </div>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control mt-0", placeholder = "Apellidos" })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-phone"></i></span>
                </div>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control mt-0", placeholder = "Telefono" })
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-lock"></i></span>
                </div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            </div>

            <div class="form-group">
                <input type="submit" id="btnRegistrar" class="btn btn-theme btn-block p-2 mb-1" value="Registrar">
            </div>
        }
    </div>
</div>