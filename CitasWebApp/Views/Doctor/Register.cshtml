@using CitasWebApp.Models
@model dynamic
<form class="form-horizontal mt-4 mb-3">
    <input type="hidden" id="idUser" value="@(Model.user.Email != null ? 1:0 )" />
    <div class="form-group row">
        <label class="control-label col-sm-3" for="input-3">Email</label>
        <div class="col-sm-9">
            <input type="text" id="txtemail" class="form-control" id="input-3" value="@Model.user.Email" @(Model.user.Email != null ? "disabled" : "") />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-3" for="input-1">Nombre</label>
        <div class="col-sm-9">
            <input type="text" id="txtnombres" class="form-control" id="input-1" value="@Model.user.Name" />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-3" for="input-2">Apellido</label>
        <div class="col-sm-9">
            <input type="text" id="txtapellidos" class="form-control" id="input-2" value="@Model.user.LastName" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-3" for="input-3">Celular</label>
        <div class="col-sm-9">
            <input type="text" id="txtcelular" class="form-control" id="input-3" value="@Model.user.Phone" />
        </div>
    </div>
    @if (Model.user.Email == null) { 
        <div class="form-group row">
            <label class="control-label col-sm-3" for="input-7">Password</label>
            <div class="col-sm-9">
                <input type="password" id="txtpassword" class="form-control" id="input-7" />
            </div>
        </div>
    }

    
    <div class="form-group row">
        <label for="exampleFormControlSelect1" class="control-label col-sm-3">Especialidad</label>
        <div class="col-sm-9">
            <select class="form-control" id="cboEspecialidad">
                <option>Seleccionar ...</option>
                @foreach (var x in Model.specialty)
                {
                    <option value="@x.idEspecialidad"  @(x.idEspecialidad==Model.user.IdEspecialidad?"selected":"") >@x.descripcion</option>
                }
            </select>
        </div>
    </div>
</form>
